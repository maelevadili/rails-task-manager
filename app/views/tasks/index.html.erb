<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <strong><%= task.title %></strong>
      <br><i class="far fa-eye"></i> <%= link_to "View details", task_path(task) %> <i class="far fa-edit"></i> <%= link_to 'Edit task', edit_task_path(task) %> <i class="far fa-trash-alt"></i> <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete #{task.title}?" } %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to new_task_path do %>
  <i class="fa fa-plus"></i> Add new task
<% end %>
