<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed %>
  <i class="far fa-check-square"></i> This task is completed
<% else %>
  <i class="far fa-square"></i> This task is not completed yet
<% end %>

<p><br><i class="far fa-edit"></i> <%= link_to 'Edit task', edit_task_path(@task) %></p>

<hr>

<%= link_to tasks_path do %>
  <i class="fas fa-history"></i> Back to list
<% end %>
